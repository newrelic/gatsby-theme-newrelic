{
  "packages": ["packages/*"],
  "version": "7.0.3",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": ["README.md"],
  "command": {
    "version": {
      "allowBranch": ["main", "feature/newrelic-io"],
      "message": "chore(release): publish %s"
    },
    "publish": {
      "conventionalCommits": true,
      "yes": true
    }
  }
}
